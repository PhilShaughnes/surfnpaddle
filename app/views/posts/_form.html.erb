


<% if @post.errors.any? %>
  <div class="bg-danger col-xs-12">
    <ul class="list-unstyled">
      <% @post.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post, class: "form_horizontal" do |f| %>
  <div class="row">
    <div class="col-sm-4 form_horizontal">

      <div class="form-group">
        <%= f.label :user_id, "Author" %>
        <%= f.select :user_id, User.all.collect{|u| [u.name, u.id]}, include_blank: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :photo %>
        <%= f.text_field :photo, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-8">
      <%= f.label :summary %>
      <%= f.text_area :summary, class: "form-control", rows: 8  %>
    </div>

  </div>

  <div class="row">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", rows: 12 %>
  </div>
  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
