


<% if @post.errors.any? %>
  <div class="bg-danger col-xs-12">
    <ul class="list-unstyled">
      <% @post.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= simple_form_for @post do |f| %>
  <div class="row">
    <div class="col-sm-4">
      <%= f.input :title %>
      <%= f.input :photo %>
      <%= f.input :img %>
    </div>
    <div class="col-sm-8">
      <%= f.input :summary, as: :text, input_html: {rows: 8} %>
    </div>
  </div>

  <div class="row">
    <%= f.input :body, as: :text, input_html: {rows: 12} %>
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
