<div class="col-lg-4 col-sm-6 postindex">

  <div class="media">
    <div class="media-left media-middle">
      <%=link_to image_tag(post.photo, class: "media-object img-square"), post %>
    </div>

    <div class="media-body">
      <h2 class="media-heading"><%=link_to post.title, post %></h2>
      <p><%= post.summary %></p>
      <%= link_to "Edit", edit_post_path(post), class: "btn btn-default btn-sm" %>
    </div>
  </div>

</div>
